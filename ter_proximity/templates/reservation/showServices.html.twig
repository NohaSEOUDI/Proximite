{% extends 'base.html.twig' %}


{% block body %}
 <h1>Voici la liste des services disponibles: </h1>
	{% for service in services %}
		<div class="card mb-3" style="max-width: 540px;">
			<div class="row no-gutters">
				<div class="col-md-4">
				<img src="https://www.emmegi.co.uk/wp-content/uploads/2019/01/User-Icon.jpg" class="card-img" alt="...">
				</div>
					<div class="col-md-8">
						<div class="card-body">
							<h5 class="card-title">{{ service.titre }}</h5>
							<a href="{{path('app_show_calendar',{'idS': service.id})}}" class="card-link"> <span class="glyphicon glyphicon-calendar"></span>Prendre RDV</a>
						</div>
					</div>
			</div>
		</div>
	
	{% endfor %}

{% endblock %}



