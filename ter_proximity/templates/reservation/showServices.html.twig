{% extends 'base.html.twig' %}


{% block body %}
 {{ include('Layouts/partials/_nav.html.twig') }}
 
 <h1 align="center"><B>La liste des services disponibles:</B> </h1></br>
  <div  class="d-grid gap-10 col-5 mx-auto" >
	{% for service in services %}
		<div class="card mb-3" style="max-width: 540px;">
			<div class="row no-gutters">
				<div class="col-md-4">
				<img src="https://www.emmegi.co.uk/wp-content/uploads/2019/01/User-Icon.jpg" class="card-img" alt="...">
				</div>
					<div class="col-md-8">
						<div class="card-body">
							<h5 class="card-title"><B>{{ service.titre }}</B></h5>
<a href="{{path('app_show_calendar',{ 'idS' : service.id, 'idClient' : app.user }  )}}" class="card-link"> 
	<span class="glyphicon glyphicon-calendar"></span><B>Prendre RDV</B></a></br>
			<B>Nom</B> :{{ service.fournisseur.nom }}</br>
			<B>Tel</B> :{{ service.telephone }}</br>
			<B>Adresse</B> : {{ service.adresse }}</br>
			<B>Creneau de base</B> : {{ service.creneauBase }}</br>
			<B>Tarif</B> :  {{ service.tarif }}</br>



						</div>
					</div>
			</div>
		</div>
	
	{% endfor %}
</div>

{% endblock %}



